# Database Configuration
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://user:password@localhost:5432/riosbackend?schema=public"

# Direct database URL (for migrations and connection pooling)
# Use this for Prisma migrations in production
DIRECT_URL="postgresql://user:password@localhost:5432/riosbackend?schema=public"

# Authentication
# CRITICAL: Generate a strong secret key for JWT tokens
# Use: openssl rand -base64 32
# NEVER use 'default-secret' in production!
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Application Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Supabase Configuration (if using Supabase)
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Optional: Email Configuration (for future features)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"

