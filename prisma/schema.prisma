generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model areas {
  id_area      Int        @id @default(autoincrement())
  nombre_area  String     @db.VarChar(255)
  descripcion  String?
  departamento String     @db.VarChar(255)
  id_empresa   Int?
  status       String?    @default("active") @db.VarChar(255)
  createdAt    DateTime   @db.Timestamptz(6)
  updatedAt    DateTime   @db.Timestamptz(6)
  companies    companies? @relation(fields: [id_empresa], references: [id])
  tasks        tasks[]
}

model companies {
  id                 BigInt   @id @default(autoincrement())
  name               String?  @db.VarChar(255)
  nit                String?  @unique @db.VarChar(255)
  email              String?  @db.VarChar(255)
  cellphone          String?  @db.VarChar(255)
  dian               String?  @db.VarChar(255)
  legalSignature     String?  @db.VarChar(255)
  accountingSoftware String?  @db.VarChar(255)
  user               String?  @db.VarChar(255)
  password           String?  @db.VarChar(255)
  mailServer         String?  @db.VarChar(255)
  companyType        String?  @default("A") @db.VarChar(255)
  status             String?  @default("active") @db.VarChar(255)
  createdAt          DateTime @db.Timestamptz(6)
  updatedAt          DateTime @db.Timestamptz(6)
  tipo               String?  @db.VarChar(255)
  cedula             String?  @db.VarChar(255)
  firma              String?  @db.VarChar(255)
  softwareContable   String?  @db.VarChar(255)
  usuario            String?  @db.VarChar(255)
  contrase_a         String?  @map("contrase√±a") @db.VarChar(255)
  servidorCorreo     String?  @db.VarChar(255)
  claveCorreo        String?  @db.VarChar(255)
  claveCC            String?  @db.VarChar(255)
  claveSS            String?  @db.VarChar(255)
  claveICA           String?  @db.VarChar(255)
  areas              areas[]
  tasks              tasks[]
}

model tasks {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(255)
  observation String?
  assigned_to Int
  company_id  Int
  area_id     Int
  due_date    DateTime  @db.Date
  status      String?   @default("in_progress") @db.VarChar(255)
  created_at  DateTime  @db.Timestamptz(6)
  updated_at  DateTime  @db.Timestamptz(6)
  areas       areas     @relation(fields: [area_id], references: [id_area], onDelete: NoAction)
  users       users     @relation(fields: [assigned_to], references: [id], onDelete: NoAction)
  companies   companies @relation(fields: [company_id], references: [id], onDelete: NoAction)
}

model users {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(255)
  email     String   @unique @db.VarChar(255)
  password  String   @db.VarChar(255)
  role      String?  @default("user") @db.VarChar(255)
  protected Boolean? @default(false)
  tasks     tasks[]
}
